/* pages/upload/uploadImg.wxss */
.header{display: flex;justify-content: space-between;}
.upload{font-size: 36rpx;background-color: #1aad16;color:#fff;padding:10rpx 30rpx;border-radius: 10rpx;margin-right: 20rpx;line-height: 1.2;}
.preview{display: flex;flex-flow: row wrap;padding: 0rpx 5rpx;margin-left: -7rpx;}
.preview .imglist{position: relative;width: 240rpx;height: 240rpx;margin-top: 10rpx;margin-left: 10rpx;}
.preview .imglist image{width: 100%;height: 100%;}
.preview .imglist text{position: absolute;top: 0rpx;right: 0rpx;}
.preview .addImg{display: flex;border: 1px solid #ccc;font-size: 96rpx;justify-content: space-around;align-items: center;box-sizing: border-box;}